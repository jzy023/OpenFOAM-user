FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

castellatedMesh true;
snap            true;
addLayers       true;

geometry
{
    
    GeoTank
    {
        type triSurfaceMesh;
        file "GeoTank.stl";
    }
    GeoShaft
    {
        type triSurfaceMesh;
        file "GeoShaft.stl";
    }
    //- Used to define MRF zone and refine mesh round the GeoShaft 
    MRF
    {
        type searchableCylinder;
        point1 (0.0  0.0  -81);
        point2 (0.0  0.0   81);
        radius 51;
    }
}


castellatedMeshControls
{

    maxLocalCells 100000;
    maxGlobalCells 2000000;
    minRefinementCells 1;
    nCellsBetweenLevels 4;
    resolveFeatureAngle 15; // 90; 
    maxLoadUnbalance 0.10;

    features
    (
        {
            file "GeoTank.eMesh";
            level 3;
        }

        {
            file "GeoShaft.eMesh";
            level 3;
        }

    );

    refinementSurfaces
    {
        GeoTank
        {
            level (3 3);
        }

        GeoShaft
        {
            level (3 3);
        }

        MRF
        {
            level (1 1);
            cellZone cellMRFzone;
            faceZone faceMRFzone;
            cellZoneInside inside;
        }
    }

    refinementRegions
    {
        MRF
        {
            mode inside;
            levels ((1E15 1));
        }
    }

    locationInMesh (20 20 20); // Inside point
    allowFreeStandingZoneFaces false; // true;
}

// Settings for the snapping.
snapControls
{
    nSmoothPatch            3;
    tolerance               4.0;
    nSolveIter              300;
    nRelaxIter              20;
    nFeatureSnapIter        20;
    explicitFeatureSnap     true;
    implicitFeatureSnap     false;
    multiRegionFeatureSnap  true;
    nFaceSplitInterval      5;
}

// Settings for the layer addition.
addLayersControls
{
    layers
    {
        GeoTank
        {
            nSurfaceLayers 5;
        }

        GeoShaft
        {
            nSurfaceLayers 3;
        }
    }

    relativeSizes           true;
    expansionRatio          1.5;
    finalLayerThickness     0.5;
    minThickness            0.2;
    nGrow                   0;

    featureAngle            60;
    nRelaxIter              5;
    nSmoothSurfaceNormals   1;
    nSmoothNormals          3;
    nSmoothThickness        10;
    maxFaceThicknessRatio   0.5;
    maxThicknessToMedialRatio 0.3;
    minMedianAxisAngle      90; // 60;
    nBufferCellsNoExtrude   0;

    nLayerIter              50;
    nRelaxedIter            20;
}

meshQualityControls
{
    #include "meshQualityDict"

    relaxed
    {
        maxNonOrtho 75;
    }
}

writeFlags
(
);

mergeTolerance 1E-6;


